<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsReserveFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:headerLayout="@layout/reserve_header"
            app:cardCornerRadius="15dp" >

            <include
                layout="@layout/reserve_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></include>


        </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                android:layout_gravity="center"
                android:elevation="10dp"
                android:backgroundTint="#00000000">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/reserva_icon"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_reserve_round"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/nameReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/reserva_icon"
                        android:layout_marginLeft="115dp"
                        android:layout_marginBottom="20dp"
                        android:paddingTop="1dp"
                        android:text="Nombre reserva"
                        android:textColor="#393838"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>




            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/colorAcent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_municipio"
                        app:tint="@color/colorPrimario"/>
                    <TextView
                        android:id="@+id/muniReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Municipio"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_place"/>
                    <TextView
                        android:id="@+id/accesoReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Acceso"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_key"/>
                    <TextView
                        android:id="@+id/pubPrivReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publico/privado"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_email"/>
                    <TextView
                        android:id="@+id/emailReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="reserva@greenspots.com"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_phone"/>
                    <TextView
                        android:id="@+id/telReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/colorAcent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_bike"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/actividadesReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividades"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_senderos"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/senderosReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Senderos"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_money"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/costoEntradaReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrada/Costo"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_service"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/serviciosReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Servicios"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_time"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/horariosReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Horarios"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/colorAcent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_flora"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/floraReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flora"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_fauna"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/faunaReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fauna"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_geologia"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/geoloReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Geologia"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_superficie"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/superfReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Superficie"
                        android:textColor="#000"
                        android:textSize="25dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:elevation="15dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/colorAcent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_resenia"
                        app:tint="@color/colorPrimario" />
                    <TextView
                        android:id="@+id/reseniaTitleReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ReseÃ±as"
                        android:textColor="#000"
                        android:textSize="23dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:id="@+id/viewReseniaReserve"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="#000"
                        android:textSize="15dp"
                        android:paddingLeft="15dp"
                        android:layout_gravity="center_vertical"/>
                    <EditText
                        android:id="@+id/editTextTextMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"

                        android:background="@color/white"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/generarPDF"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:backgroundTint="@color/colorPrimario"
            android:textColor="@color/white"
            android:text="Descargar"
            android:textSize="25dp"/>
    </LinearLayout>


</ScrollView>